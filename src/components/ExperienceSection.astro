---
import ExperienceCard from './ExperienceCard.astro';
import { EXPERIENCES } from '../data/experience';

const titleId = 'work-exp-title';
---

<section class='exp-section' aria-labelledby={titleId}>
	<h2 id={titleId}>Experiencia laboral</h2>

	<div class='grid'>
		{
			EXPERIENCES.map((e) => (
				<ExperienceCard
					role={e.role}
					company={e.company}
					period={e.period}
					location={e.location}
					bullets={e.bullets}
				/>
			))
		}
	</div>
</section>

<style>
	.exp-section {
		border: 1px solid #3a4056;
		background: #2a2f41;
		border-radius: 12px;
		padding: 1rem;
	}
	.exp-section > h2 {
		color: #7de089;
		margin: 0.25rem 0 1rem 0;
		font-size: 1.2rem;
	}
	.grid {
		display: grid;
		gap: 1rem;
		grid-template-columns: repeat(2, minmax(0, 1fr));
	}
	@media (max-width: 980px) {
		.grid {
			grid-template-columns: 1fr;
		}
	}
</style>
