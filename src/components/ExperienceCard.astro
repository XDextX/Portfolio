---
export interface Props {
	role: string;
	company: string;
	period: string;
	location?: string;
	bullets: string[];
}

const { role, company, period, location, bullets } = Astro.props;
---

<article class='card primary-bg' aria-labelledby={`${company}-title`}>
	<h3 id={`${company}-title`} class='exp-title'>
		<span class='role'>{role}</span>
		<span class='sep'> Â· </span>
		<span class='company'>{company}</span>
		<span class='period'>({period})</span>
	</h3>

	{location && <p class='location'>{location}</p>}

	<ul class='bullets'>
		{bullets.map((b) => <li>{b}</li>)}
	</ul>
</article>

<style>
	.exp-card {
		background: var(--primary-color);
		border: 1px solid #3a4056;
		border-radius: 12px;
		padding: 1rem 1.25rem;
		box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
	}
	.exp-title {
		color: var(--accent-color-darker);
		font-weight: 800;
		margin: 0 0 0.25rem 0;
		line-height: 1.3;
	}
	.role {
		color: var(--accent-color);
	}
	.company {
	}
	.period {
		font-weight: 700;
		margin-left: 0.4rem;
	}
	.location {
		color: var(--accent-color-dark);
		margin: 0.1rem 0 0.6rem 0;
		font-size: 0.95rem;
	}
	.bullets {
		margin: 0;
		padding-left: 1.2rem;
		display: grid;
		gap: 0.4rem;
	}
	.bullets li {
		color: #e6eaf3;
	}
	.sep {
		font-weight: 700;
	}
</style>
