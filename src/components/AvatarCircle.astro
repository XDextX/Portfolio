---
export interface Props {
	src: string;
	alt?: string;
	size?: number; // px
	ring?: boolean;
}

const { src, alt = 'Profile picture', size = 240, ring = true } = Astro.props;
---

<div class={`avatar ${ring ? 'ring' : ''}`} style={`--size:${size}px`}>
	<img
		src={src}
		alt={alt}
		width={size}
		height={size}
		loading='lazy'
		decoding='async'
	/>
</div>

<style>
	.avatar {
		width: var(--size);
		height: var(--size);
		border-radius: 50%;
		overflow: hidden;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		background: #22283a;
	}
	.avatar img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}
	.avatar.ring {
		outline: 4px solid #7de08955;
		box-shadow: 0 0 0 2px #7de08920 inset;
		border: 2px solid #7de089;
	}
</style>
