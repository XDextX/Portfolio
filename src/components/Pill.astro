---
export interface Props {
	text: string;
	variant?: 'success' | 'info' | 'warning' | 'neutral';
	size?: 'sm' | 'md';
	outlined?: boolean;
	title?: string;
	ariaLabel?: string;
	as?: 'span' | 'div';
}
const {
	text,
	variant = 'neutral',
	size = 'md',
	outlined = false,
	title = text,
	ariaLabel = text,
	as = 'span',
} = Astro.props;
const Tag = as;
---

<Tag
	class={`pill ${variant} ${size} ${outlined ? 'outlined' : 'filled'}`}
	title={title}
	aria-label={ariaLabel}>{text}</Tag
>

<style></style>
