---
export interface Props {
	text: string;
	variant?: 'success' | 'info' | 'warning' | 'neutral';
	size?: 'sm' | 'md';
	outlined?: boolean;
	title?: string;
	ariaLabel?: string;
	as?: 'span' | 'div';
}
const {
	text,
	variant = 'neutral',
	size = 'md',
	outlined = false,
	title = text,
	ariaLabel = text,
	as = 'span',
} = Astro.props;
const Tag = as;
---

<Tag
	class={`pill ${variant} ${size} ${outlined ? 'outlined' : 'filled'}`}
	title={title}
	aria-label={ariaLabel}>{text}</Tag
>

<style>
	.pill {
		display: inline-block;
		font-weight: 600;
		line-height: 1;
		border-radius: 999px;
		padding: 0.28rem 0.55rem;
		border: 1px solid transparent;
		white-space: nowrap;
		user-select: none;
	}
	.pill.sm {
		font-size: 0.7rem;
		padding: 0.2rem 0.45rem;
	}
	.pill.md {
		font-size: 0.8rem;
	}
	.filled.neutral {
		background: #f4f4f5;
		color: #333;
		border-color: #e6e6e7;
	}
	.filled.info {
		background: #eaf2ff;
		color: #2257a3;
		border-color: #cfe2ff;
	}
	.filled.success {
		background: #eaf7ec;
		color: #287a37;
		border-color: #c9e6cd;
	}
	.filled.warning {
		background: #fff5e6;
		color: #a66300;
		border-color: #ffe0b3;
	}
	.outlined {
		background: transparent;
	}
	.outlined.neutral {
		color: #555;
		border-color: #d4d4d8;
	}
	.outlined.info {
		color: #2257a3;
		border-color: #cfe2ff;
	}
	.outlined.success {
		color: #287a37;
		border-color: #c9e6cd;
	}
	.outlined.warning {
		color: #a66300;
		border-color: #ffe0b3;
	}
</style>
