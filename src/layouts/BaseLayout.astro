---
const title =
	'German Montero Ramirez – Full-Stack Developer (.NET, Angular, Java, SSE)';
const desc =
	'Portafolio de German Montero Ramirez: .NET Core, Angular SSR, Java, SSE y optimización SQL. Proyectos, experiencia y contacto.';
const site = 'https://portfolio-dext.vercel.app';
const image = `${site}/og-cover.png`; // súbela a /public
---

<head>
	<meta charset='utf-8' />
	<meta name='viewport' content='width=device-width, initial-scale=1' />
	<title>{title}</title>
	<meta name='description' content={desc} />

	<!-- Open Graph -->
	<meta property='og:type' content='website' />
	<meta property='og:title' content={title} />
	<meta property='og:description' content={desc} />
	<meta property='og:url' content={site + Astro.url.pathname} />
	<meta property='og:image' content={image} />

	<!-- Twitter -->
	<meta name='twitter:card' content='summary_large_image' />
	<meta name='twitter:title' content={title} />
	<meta name='twitter:description' content={desc} />
	<meta name='twitter:image' content={image} />
</head>
<slot />
